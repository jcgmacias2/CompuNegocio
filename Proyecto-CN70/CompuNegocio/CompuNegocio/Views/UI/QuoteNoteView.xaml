<base:BaseView x:Class="Aprovi.Views.UI.QuoteNoteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:base="clr-namespace:Aprovi.Views"
        xmlns:hlp="clr-namespace:Aprovi.Application.Helpers"
        Title="Nota"
        Icon="{StaticResource ImgCatalogs}"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowBorder}"
        FocusManager.FocusedElement="{Binding ElementName=txtNota}"
        Height="230" Width="320">
    <Grid Background="{StaticResource GrayBrownToWhiteGradient}" hlp:EnterKeyTraversal.IsEnabled="False">
        <Label Style="{StaticResource LabelSmall}" Content="Nota :" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNota" HorizontalAlignment="Left" Height="79" Margin="57,20,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="233"/>
        <Button x:Name="btnGuardar" Content="Guardar" Style="{StaticResource BlockButton}" Margin="130,120,0,0" Tag="{StaticResource ImgSave}"/>
    </Grid>
</base:BaseView>



