<base:BaseView x:Class="Aprovi.Views.UI.PropertyAccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:base="clr-namespace:Aprovi.Views"
        xmlns:hlp="clr-namespace:Aprovi.Application.Helpers"
        Title="Cuenta Predial"
        Icon="{StaticResource ImgCatalogs}"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowBorder}"
        FocusManager.FocusedElement="{Binding ElementName=txtCuenta}"
        Height="200" Width="320">
    <Grid Background="{StaticResource GrayBrownToWhiteGradient}" hlp:EnterKeyTraversal.IsEnabled="True">
        <Label Style="{StaticResource LabelSmall}" Content="Cuenta Predial :" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCuenta" HorizontalAlignment="Left" Height="23" Margin="110,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Button x:Name="btnListarCuentas" IsTabStop="False" Content="..." Style="{StaticResource SmallButton}" Margin="255,20,0,0" Width="25"/>

        <Button x:Name="btnCerrar" Content="Cerrar" Style="{StaticResource BlockButton}" Margin="20,90,0,0" Tag="{StaticResource ImgClose}"/>
        <Button x:Name="btnNuevo" Content="Nuevo" Style="{StaticResource BlockButton}" Margin="90,90,0,0" Tag="{StaticResource ImgNewDocument}"/>
        <Button x:Name="btnEliminar" Content="Eliminar" Style="{StaticResource BlockButton}" Margin="160,90,0,0" Tag="{StaticResource ImgDelete}"/>
        <Button x:Name="btnGuardar" Content="Guardar" Style="{StaticResource BlockButton}" Margin="230,90,0,0" Tag="{StaticResource ImgSave}"/>
    </Grid>
    </base:BaseView>



