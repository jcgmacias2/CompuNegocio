<base:BaseView x:Class="Aprovi.Views.UI.ItemCommentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:base="clr-namespace:Aprovi.Views"
        xmlns:hlp="clr-namespace:Aprovi.Application.Helpers"
        Title="Comentario de artículo"
        Icon="{StaticResource ImgNewDocument}"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowBorder}"
        FocusManager.FocusedElement="{Binding ElementName=txtComentario}"
        Height="300" Width="350">
    <Grid Background="{StaticResource GrayBrownToWhiteGradient}" hlp:EnterKeyTraversal.IsEnabled="True">
        <Label Style="{StaticResource LabelSmall}" Content="Comentario :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtComentario" HorizontalAlignment="Left" Height="130" Margin="20,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        
        <Button x:Name="btnGuardar" Content="Guardar" Style="{StaticResource BlockButton}" Margin="145,190,0,0" Tag="{StaticResource ImgSave}"/>
    </Grid>
    </base:BaseView>



